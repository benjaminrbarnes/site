---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
// Filter to only show top-level projects (no parent)
const topLevelProjects = projects.filter(p => !p.data.parent);
---

<Layout title="Projects - Ben Barnes">
  <h1 class="page-title">Projects</h1>

  {topLevelProjects.length === 0 ? (
    <p class="empty-state">No projects yet.</p>
  ) : (
    <ul class="project-list">
      {topLevelProjects.map(project => (
        <li>
          <a href={`/projects/${project.slug}`}>
            <span class="project-title">{project.data.title}</span>
            {project.data.description && (
              <span class="project-desc">{project.data.description}</span>
            )}
          </a>
        </li>
      ))}
      <li>
        <a href="/gallery">
          <span class="project-title">Photos</span>
          <span class="project-desc">Photo albums</span>
        </a>
      </li>
    </ul>
  )}
</Layout>

<style>
  .page-title {
    font-size: 1.5rem;
    font-weight: 500;
    margin: 0 0 2rem 0;
    color: #2a2a2a;
  }

  .empty-state {
    color: #666;
  }

  .project-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .project-list li {
    border-bottom: 1px solid #e0e0e0;
  }

  .project-list li:first-child {
    border-top: 1px solid #e0e0e0;
  }

  .project-list a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    gap: 1rem;
  }

  .project-title {
    color: #5a6a8a;
    text-decoration: underline;
    text-underline-offset: 3px;
    font-size: 1.15rem;
  }

  .project-desc {
    color: #666;
    font-size: 1rem;
  }
</style>
