---
interface Props {
  title?: string;
}

const { title = 'Ben Barnes' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Ben Barnes personal website" />
    <meta name="theme-color" content="#0a0a0a" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/logo192.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;500;600&display=swap" rel="stylesheet">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="header-left">
          <a href="/" class="logo">Ben Barnes</a>
          <a href="https://www.instagram.com/benjaminbarnes/" target="_blank" class="instagram">@benjaminbarnes</a>
        </div>
        <nav>
          <a href="/">Photos</a>
          <a href="/notepad">Notepad</a>
          <a href="/contact">Contact</a>
        </nav>
      </div>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer>
      <div class="container">
        <p>&copy; {new Date().getFullYear()}</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  body {
    font-family: 'EB Garamond', Georgia, serif;
    background: #0a0a0a;
    color: #e5e5e5;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    margin: 0;
    font-size: 1.1rem;
  }

  main.container {
    flex: 1;
    padding-top: 2rem;
    padding-bottom: 4rem;
  }

  a {
    color: #e5e5e5;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: #fff;
    text-decoration: none;
  }

  header {
    padding: 2rem 0;
    border-bottom: 1px solid #222;
  }

  header .container {
    display: flex !important;
    justify-content: space-between !important;
    align-items: center !important;
    flex-wrap: nowrap;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    header .container {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .header-left {
      flex-direction: column;
      gap: 0.5rem;
    }

    nav {
      justify-content: center;
    }
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 500;
  }

  .instagram {
    font-size: 1rem;
    color: #7B8FAE;
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .instagram:hover {
    color: #9EB1D4;
  }

  nav {
    display: flex;
    gap: 2rem;
  }

  nav a {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  nav a:hover {
    opacity: 1;
  }

  footer {
    padding: 2rem 0;
    border-top: 1px solid #222;
    text-align: center;
    opacity: 0.5;
    font-size: 0.85rem;
  }

  /* Card overrides for dark theme */
  .card {
    background: #141414;
    border: 1px solid #222;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease, border-color 0.2s ease;
  }

  .card:hover {
    transform: translateY(-4px);
    border-color: #333;
  }

  .card-body {
    padding: 1rem;
  }

  .card-text {
    color: #e5e5e5;
    margin-bottom: 0.5rem;
  }

  .card-text:last-child {
    color: #888;
    font-size: 0.85rem;
  }

  /* Smooth image loading */
  img {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards;
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }
</style>
